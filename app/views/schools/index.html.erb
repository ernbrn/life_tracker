<h1>Listing schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>School name</th>
      <th>Beginning year</th>
      <th>Ending year</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @schools.order(beginning_year: :desc).each   do |school| %>
      <tr>
        <td><%= school.person.your_name %></td>
        <td><%= school.school_name %></td>
        <td><%= school.beginning_year %></td>
        <td><%= school.ending_year %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

