<div class="header">
<div class = "row">
  <div class= "large-2 columns">
  </div>

<div class= "large-7 large-centered columns">
<h1>Hey! Fill Out Some Forms! </h1>
</div>

<div class= "large-3 columns">
</div>
</div>
</div>


<div class = "row">
<h2 class= "subheader"> Here are some recent ones: </h2>
</div>

<div class ="row">
<div class="large-6 columns">


<p>
  <p>
    <h3 class="subheader">Life Events: <br></h3>

    <tbody>
      <% @life_events.order(date: :desc).each do |life_event| %>
        <tr>
          <td><strong>Name:</strong></td>
          <td><%= life_event.person.your_name %><br></td>
          <td><strong>Event Name: </strong></td>
          <td><%= life_event.event_title %><br></td>
          <td><strong>Event Date: </strong></td>
          <td><%= life_event.date %><br></td>
          <td><strong>Event Description: </strong></td>
          <td><%= life_event.description %><br><br></td>
          <%break%>
          <%end %>
        </tbody>
  </p>
</div>

<div class="large-6 columns">
  <p>
<h3 class="subheader">Schools: <br></h3>
        <tbody>
          <% @schools.order(beginning_year: :desc).each do |school| %>
            <tr>
              <td><strong>Name: </strong></td>
              <td><%= school.person.your_name %><br></td>
              <td><strong>School Name: </strong></td>
              <td><%= school.school_name %><br></td>
              <td><strong>School Start Date: </strong></td>
              <td><%= school.beginning_year %><br></td>
              <td><strong>School End Date: </strong></td>
              <td><%= school.ending_year %><br><br><br></td>
            </tr>
            <%break%>
          <% end %>
        </tbody>
      </p>
    </div>
  </div>
<div class = "row">
  <div class ="large-3 columns">
</div>
<div class ="large-6 large-centered columns">

<p>
      <tbody>
          <tr>
            <td><%= link_to "Life Events", life_events_path %>  |  </td>
            <td><%= link_to "Schools", schools_path %>  |  </td>
            <td><%= link_to "People", people_path %>  |  </td>
              <td><%= link_to "Back Home", root_path %> </td><br><br>
          </tr>
      </tbody>
    </p>
  </div>
</div>
<div class ="large-3 columns">
</div>
</p>
