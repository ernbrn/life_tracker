<h1>Life Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Event title</th>
      <th>Date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @life_events.order(date: :desc).each do |life_event| %>
      <tr>
        <td><%= life_event.person.your_name %></td>
        <td><%= life_event.event_title %></td>
        <td><%= life_event.date %></td>
        <td><%= life_event.description %></td>
        <td><%= link_to 'Show', life_event %></td>
        <td><%= link_to 'Edit', edit_life_event_path(life_event) %></td>
        <td><%= link_to 'Destroy', life_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Life Event  |  ', new_life_event_path %>

